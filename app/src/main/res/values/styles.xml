<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textViewStyle">@style/SansTextViewStyle</item>
        <item name="android:buttonStyle">@style/SansButtonStyle</item>

    </style>


    <style name="ToolbarTheme" parent="Widget.Design.AppBarLayout">
        <item name="android:background">@drawable/toolbar_bg</item>
        <item name="android:textColorPrimary">@color/colorMainGreen</item>
        <item name="android:textColorSecondary">@color/colorMainGreen</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="SansTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/open_sans_extrabold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="SansButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/open_sans_extrabold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="BottomNavigationTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@color/colorMainGray</item>
    </style>

    <style name="AppThemeSec" parent="Theme.AppCompat.Light.DarkActionBar" />

    <style name="AppThemeSec.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">#7bc1ba</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">#FFFFFF</item>
        <!-- Used for the background -->
        <item name="android:background">#424242</item>
    </style>

</resources>
