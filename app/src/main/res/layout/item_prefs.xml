<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/constraintPreferences"
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_height="wrap_content">
    <ImageView
            android:id="@+id/imagePreferences"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_notification_m_two_days"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:id="@+id/titlePreferences"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/TextViewRegular"
            android:textColor="@android:color/black"
            android:text="TextView"
            android:layout_margin="8dp"
            app:layout_constraintStart_toEndOf="@+id/imagePreferences"
            app:layout_constraintBottom_toBottomOf="@+id/imagePreferences"
            app:layout_constraintTop_toTopOf="@+id/imagePreferences"/>
    <TextView
            android:id="@+id/summaryPrefs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/imagePreferences" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/titlePreferences"/>
    <TextView
            android:id="@+id/valuePrefs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_margin="8dp"
            android:textStyle="bold"
            android:textColor="@color/colorMainGreen"
            app:layout_constraintTop_toTopOf="@+id/titlePreferences"
            app:layout_constraintBottom_toBottomOf="@+id/titlePreferences"
            app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>