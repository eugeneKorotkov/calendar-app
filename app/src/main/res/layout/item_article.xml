<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
                name="article"
                type="com.vio.calendar.model.article.Article"/>
    </data>
    <androidx.cardview.widget.CardView
            style="@style/ArticleCardViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_single">

        <androidx.constraintlayout.widget.ConstraintLayout
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/articleImage"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/rounded_corners"
                    app:srcCompat="@drawable/com_facebook_button_icon_blue"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_margin="8dp"
                    app:layout_constraintDimensionRatio="H,16:9"
                    app:layout_constraintTop_toTopOf="parent"/>
            <androidx.constraintlayout.widget.Guideline
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintGuide_percent="0.1"
                    android:id="@+id/guidelineStartDivider"/>
            <androidx.constraintlayout.widget.Guideline
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintGuide_percent="0.9"
                    android:id="@+id/guidelineEndDivider"/>
            <net.cachapa.expandablelayout.ExpandableLayout
                    android:id="@+id/commentLayout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@drawable/article_background"
                    android:layout_margin="8dp"
                    app:layout_constraintTop_toBottomOf="@id/contentLayout"
                    app:el_duration="1000"
                    app:el_expanded="false">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="300dp">
                    <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.8">
                    </androidx.recyclerview.widget.RecyclerView>
                    <EditText
                            android:autofillHints="username"
                            android:hint="hint"
                            android:layout_width="match_parent"
                            android:textColor="@android:color/black"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
            </net.cachapa.expandablelayout.ExpandableLayout>
            <net.cachapa.expandablelayout.ExpandableLayout
                    android:id="@+id/contentLayout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:paddingBottom="35dp"
                    android:background="@drawable/article_background"
                    android:layout_margin="8dp"
                    app:layout_constraintTop_toBottomOf="@id/articleImage"
                    app:el_duration="1000"
                    app:el_expanded="false"
                    app:el_parallax="0.5" tools:layout_editor_absoluteX="8dp">
                <TextView
                        android:id="@+id/articleContent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:layout_margin="8dp"
                        android:theme="@style/TextViewRegular"/>
            </net.cachapa.expandablelayout.ExpandableLayout>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_article_like"
                    android:id="@+id/articleLike"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="@id/articleImage"
                    app:layout_constraintStart_toStartOf="@+id/guidelineStartDivider"
                    android:layout_marginStart="8dp"/>
            <ImageView
                    android:id="@+id/articleComment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_corners"
                    app:srcCompat="@drawable/ic_article_comment"
                    app:layout_constraintBottom_toBottomOf="@id/articleImage"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/guidelineEndDivider" android:layout_marginEnd="8dp"/>
            <View
                    android:id="@+id/articleDivider"
                    android:layout_width="0dp"
                    android:background="@android:color/white"
                    android:layout_height="2dp"
                    android:layout_margin="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/articleLike"
                    app:layout_constraintEnd_toStartOf="@id/guidelineEndDivider"
                    app:layout_constraintStart_toStartOf="@+id/guidelineStartDivider"/>
            <TextView
                    android:text="12.3k"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/articleLikeCount"
                    android:textColor="@android:color/white"
                    app:layout_constraintStart_toEndOf="@+id/articleLike"
                    android:layout_marginStart="8dp"
                    app:layout_constraintTop_toTopOf="@+id/articleLike"
                    app:layout_constraintBottom_toBottomOf="@+id/articleLike" android:textStyle="bold"/>
            <TextView
                    android:text="article simple title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:theme="@style/TextViewHeader"
                    android:id="@+id/articleTitle"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/guidelineStartDivider"
                    android:layout_marginStart="8dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>