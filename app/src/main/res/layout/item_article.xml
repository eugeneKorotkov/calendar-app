<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        style="@style/ArticleCardViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        card_view:cardPreventCornerOverlap="false"
        android:id="@+id/articleCard">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/articleConstraint">
        <ImageView
                android:id="@+id/articleImage"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintDimensionRatio="H,16:9"
                app:layout_constraintTop_toTopOf="parent"/>
        <androidx.constraintlayout.widget.Guideline
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_percent="0.1"
                android:id="@+id/guidelineStartDivider"/>
        <androidx.constraintlayout.widget.Guideline
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_percent="0.9"
                android:id="@+id/guidelineEndDivider"/>
        <net.cachapa.expandablelayout.ExpandableLayout
                android:id="@+id/commentLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="8dp"
                app:layout_constraintTop_toBottomOf="@id/contentLayout"
                app:el_duration="1000"
                app:el_expanded="false">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/commentConstraint"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="300dp">
                <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.8"
                        android:id="@+id/commentRecycler"
                        android:overScrollMode="never"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/commentInputField">
                </androidx.recyclerview.widget.RecyclerView>
                <EditText
                        android:autofillHints="username"
                        android:layout_width="0dp"
                        android:textColor="@android:color/black"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:id="@+id/commentInputField"
                        android:layout_marginStart="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/sendCommentButton" android:layout_marginEnd="8dp"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_send_message"
                        android:id="@+id/sendCommentButton"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintTop_toTopOf="@+id/commentInputField"
                        app:layout_constraintBottom_toBottomOf="@+id/commentInputField"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </net.cachapa.expandablelayout.ExpandableLayout>
        <net.cachapa.expandablelayout.ExpandableLayout
                android:id="@+id/contentLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="8dp"
                app:layout_constraintTop_toBottomOf="@id/articleImage"
                app:el_duration="1000"
                app:el_expanded="false"
                app:el_parallax="0.5"
                card_view:layout_editor_absoluteX="8dp">
            <TextView
                    android:id="@+id/articleContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_margin="8dp"
                    android:theme="@style/TextViewRegular"/>
        </net.cachapa.expandablelayout.ExpandableLayout>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/articleLike"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="@id/articleImage"
                app:layout_constraintStart_toStartOf="@+id/guidelineStartDivider"
                android:layout_marginStart="8dp"/>
        <ImageView
                android:id="@+id/articleComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corners"
                app:srcCompat="@drawable/ic_article_comment"
                app:layout_constraintBottom_toBottomOf="@id/articleImage"
                android:layout_marginBottom="8dp"
                app:layout_constraintEnd_toStartOf="@+id/guidelineEndDivider"
                android:layout_marginEnd="8dp"/>
        <View
                android:id="@+id/articleDivider"
                android:layout_width="0dp"
                android:background="@android:color/white"
                android:layout_height="2dp"
                android:layout_margin="8dp"
                app:layout_constraintBottom_toTopOf="@+id/articleLike"
                app:layout_constraintEnd_toStartOf="@id/guidelineEndDivider"
                app:layout_constraintStart_toStartOf="@+id/guidelineStartDivider"/>
        <TextView
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/articleLikeCount"
                android:textColor="@android:color/white"
                app:layout_constraintStart_toEndOf="@+id/articleLike"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@+id/articleLike"
                app:layout_constraintBottom_toBottomOf="@+id/articleLike"
                android:textStyle="bold"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:theme="@style/TextViewHeader"
                android:gravity="left"
                android:id="@+id/articleTitle"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guidelineStartDivider"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                card_view:layout_constraintEnd_toStartOf="@+id/guidelineEndDivider"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
