<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:srcCompat="@drawable/avatar_circle"
            app:layout_constraintDimensionRatio="H,1:1"
            android:layout_marginStart="8dp"
            android:id="@+id/circle"
            app:layout_constraintTop_toTopOf="@+id/name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/name"/>

    <TextView
            android:text="SimpleName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:id="@+id/name"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/circle"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="A"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="0dp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/circle"
            android:id="@+id/circleLetter"
            app:layout_constraintTop_toTopOf="@+id/circle"
            app:layout_constraintEnd_toEndOf="@+id/circle"
            app:layout_constraintBottom_toBottomOf="@+id/circle"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/comment"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/name"
            app:layout_constraintStart_toStartOf="@+id/name"
            android:layout_marginStart="8dp"
    />

    <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.05"
            android:id="@+id/guidelineCommentStartDivider"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.95"
            android:id="@+id/guidelineCommentEndDivider"/>

    <View
            android:id="@+id/commentDivider"
            android:layout_width="0dp"
            android:background="@color/defaultText"
            android:layout_height="2dp"
            android:layout_margin="8dp"
            app:layout_constraintTop_toBottomOf="@+id/comment"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guidelineCommentEndDivider"
            app:layout_constraintStart_toStartOf="@+id/guidelineCommentStartDivider"/>
</androidx.constraintlayout.widget.ConstraintLayout>